{
  "manifest_version": 3,
  "name": "Faceit Kills Stats",
  "version": "1.0",
  "description": "Парсит последние 3 матча с профиля FACEIT игроков из лобби и показывает количество убийств.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://www.faceit.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://www.faceit.com/*"],
      "js": ["content.js"]
    }
  ]
}